{
  "name": "base-starter",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@sdk/eslint-config": "*",
    "@sdk/typescript-config": "*",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=20.10.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "turbo run lint --",
      "prettier --write ."
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/*",
    "sdk/*"
  ]
}